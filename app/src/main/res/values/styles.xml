<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@mipmap/screen_bg</item>
    </style>

    <style name="AppTheme.Button.Transparent" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#4DDAFBF5</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button.Brown" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#FF3F383B</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.EditText.Big" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">@dimen/dp_6</item>
        <item name="android:paddingLeft">@dimen/dp_6</item>
        <item name="android:paddingRight">@dimen/dp_6</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@mipmap/edit_bg_long</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Animation.PopupWindow" parent="Animation.AppCompat.DropDownUp">

    </style>
    <!--SplashActivity   欢迎页 style-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">    <!-- 欢迎页背景引用刚才写好的 -->
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true
        </item>    <!-- <item name="android:windowIsTranslucent">true</item> -->
        <!-- 透明背景不要了 -->
    </style>

    <!--侧滑关闭 Activity  style-->
    <style name="window_translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="swipeback_activity_style" parent="window_translucent"></style>
</resources>
